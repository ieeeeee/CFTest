                                                <td>{{item.PlanID}}</td>
                                                <td>{{item.PlanTitle}}</td>
                                                <td>{{item.PlanType}}</td>
                                                <td>{{item.Operator}}</td>
                                                <td>{{item.IsDeleted}}</td>
