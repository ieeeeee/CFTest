                            <div class="tabtype">
                                <ul>
                                    <li v-for="(item,index) in planTypeInfo"><a v-on:click="GetPlanTypeInfo($event,item.BaseValue)"><span>{{item.BaseName}}</span></a></li>
                                    <li>项目2</li>
                                </ul>
