@section headerJS{
    <script src="~/Content/FrameTheme/js/cbpFWTabs.js"></script>
    <style>
        .buttons-ui {
            text-align: left;
        }

        .graph {
            padding: 1em 1em;
        }

        .tabs nav li.tab-current {
            border: none;
            box-shadow: none;
            border-bottom: 2px solid #05ba5a;
        }

        .tabs nav ul li {
            border: none;
        }

        .tabs nav li.tab-current:before, .tabs nav li.tab-current:after {
            background: #cccccc;
        }

        .tabs nav li.tab-current a {
            color: #05ba5a;
        }

        .tabs nav a {
            color: #333333;
            padding: 0 1.0em;
        }

        .tabs nav ul {
            float: left;
        }
        .tabtype{
            text-align:center;
            display:block;
            position:relative;
            float:left;
        }
        .tabtype ul{
            float:left;
            padding:1em 1em;
            margin-right:10em;
            list-style:none;
            display:inline-block;
        }
        .tabtype ul li{
            float:left;
            display:block;
            position:relative;
            margin:0 1.25em;
            font-size:16px;
        }
        .content section{
            padding:1em 1em;
        }
        .table td, .table > tbody > tr > td {
            border-top: 1px solid #dddddd !important;
            border-bottom: 1px solid #dddddd !important;
        }
        .table thead>tr>th{
            border-bottom:0;
        }
        .buttons-ui{
            padding:0.5em 0.5em;
        }
        .btn{
            padding:8px 12px;
        }
    </style>
}
<div class="tab-main">
    <div class="tab-inner">
        <div id="tabs" class="tabs">
            <div class="graph">
