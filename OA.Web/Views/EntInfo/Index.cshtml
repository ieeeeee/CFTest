                    <tr> <th scope="row">{{index+1}}</th> <td>{{item.EntName}}</td><td>{{item.Address}}</td> <td>{{item.Tel}}</td> <td>{{item.isDeleted}}</td></tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 text-center" v-if="entInfoList.length<=0 ">
            @Html.Display("没有数据")!
